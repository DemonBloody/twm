# //start tor/kill script- - - - - - - - - - - - - - - - - - - - - - - - - - -
tor_stop () {
	pkill -9 tor
	if [[ $i -le 30 ]] ; then
		ALERT="Starting Tor VPN, wait to"
		tor &
	else
		ALERT="Wait to"; pkill -9 tor
	fi
        until [[ $i -le 1 ]] ; do
		clear
		echo -e "$ALERT ("$i"s)...\nOr press ENTER for stop.\n"
                i=$[$i-1]; read -t1 && kill -9 $$
        done
	reset
}
